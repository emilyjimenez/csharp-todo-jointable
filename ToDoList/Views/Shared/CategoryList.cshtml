@if (Model.Count != 0)
{
  <div class="well">
      <h2>Categories:</h2>
      <ul>
        @foreach(var category in Model)
        {
          <li><a href="/category/@category.Id">@category.Name</a></li>
        }
      </ul>
  </div>

  <form action="/categories/clear" method="post">
      <button class="btn" type="submit" name="button">Clear All Categories</button>
  </form>
}
