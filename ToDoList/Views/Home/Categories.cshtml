@{
    Layout = "_Layout";
}
<div class="container">
  <h1>To Do List</h1>
<hr />
<h2>Categories:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var category in Model)
    {
      <li><a href="/categories/@category.Id">@category.Name</a></li>
    }
  </ul>
}
<h4><a href="/categories/new">Add a new category</a></h4>
<h4><a href="/">Return home</a></h4>
</div>
