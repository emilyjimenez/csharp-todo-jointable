@{
    Layout = "_Layout";
}
<div class="container">
  <h1>To Do List</h1>
  <hr />
  <h2>Tasks:</h2>
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var task in Model)
      {
        <li><a href='/tasks/@task.Id'>@task.Name</a></li>
      }
    </ul>
  }
  <h4><a href="/tasks/new">Add new task</a></h4>
  <h4><a href="/">Return home</a></h4>
</div>
