<h1>To Do List</h1>
<form action="/" method="post">
    <label for="new-task">Add a new task</label>
    <input id="new-task" name="new-task" type="text">
    <button type="submit">Submit</button>
</form>

@if (Model != null)
{
    <h1>To Do List</h1>
    <ul>
        @foreach(string task in Model)
        {
        <li>@task</li>
        }
    </ul>

    <form action="/task/list/clear" method="post">
    <button type="submit" name="button">Clear All Tasks</button>
    </form>
}
