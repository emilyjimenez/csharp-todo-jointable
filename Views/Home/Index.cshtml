@{
    Layout = "_Layout";
}
<div class="container">
    <div class="jumbotron">
        <h1>Make A To-Do List!</h1>
    </div>
    <form action="/task/new" method="post">
        <div class="form-group">
            <label for="new-task">Add a new task</label>
            <input class="form-control" id="new-task" name="new-task" type="text" autofocus>
        </div>
        <div class="form-group">
            <button class="btn" type="submit">Submit</button>
        </div>
    </form>

    @if (Model["TaskList"].Count != 0)
    {
    <div class="well">
        <h2>Your List:</h2>
        <ul>
          @foreach(var task in Model["TaskList"])
          {
            <li><a href="/tasks/@task.Id">@task.Description</a></li>
          }
        </ul>
    </div>

    <form action="/task/clear" method="post">
        <button class="btn" type="submit" name="button">Clear All Tasks</button>
    </form>
    }

    @if (Model["CurrentTask"] != null)
    {
      <div class="well">
        <h1>@Model["CurrentTask"].Description</h1>
      </div>
    }
</div>
